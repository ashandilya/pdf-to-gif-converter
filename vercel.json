{
    "version": 2,
    "builds": [
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "*.css", "use": "@vercel/static" },
        { "src": "*.js", "use": "@vercel/static" },
        { "src": "*.svg", "use": "@vercel/static" },
        { "src": "api/convert.py", "use": "@vercel/python" }
    ],
    "routes": [
        {
            "src": "/api/convert",
            "methods": ["POST", "OPTIONS"],
            "dest": "api/convert.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
} 